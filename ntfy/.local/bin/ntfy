#! /usr/bin/python

from sys      import argv
from os.path  import expanduser
from requests import post

home = expanduser('~')
secret = None
with open(home + '/.ntfy') as f:
    secret = f.read().rstrip()

data = {
  'message': ' '.join(argv[1:]),
  'level': 5,
  'secret': secret,
}

resp = post('https://api.pushjet.io/message', data=data).json()
