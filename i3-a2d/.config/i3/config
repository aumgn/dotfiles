# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set_from_resource $color0  i3wm.color0  #000000
set_from_resource $color1  i3wm.color1  #000000
set_from_resource $color2  i3wm.color2  #000000
set_from_resource $color3  i3wm.color3  #000000
set_from_resource $color4  i3wm.color4  #000000
set_from_resource $color5  i3wm.color5  #000000
set_from_resource $color6  i3wm.color6  #000000
set_from_resource $color7  i3wm.color7  #000000
set_from_resource $color8  i3wm.color7  #000000
set_from_resource $color9  i3wm.color7  #000000
set_from_resource $color10 i3wm.color10 #aaaaaa
set_from_resource $color11 i3wm.color11 #000000
set_from_resource $color12 i3wm.color12 #000000
set_from_resource $color13 i3wm.color13 #000000
set_from_resource $color14 i3wm.color14 #000000
set_from_resource $color15 i3wm.color15 #000000

set $mod Mod4
set $mod2 Shift
set $mod3 Control

set $left HDMI-0
set $right DVI-D-0

set $w1 1
set $w2 2
set $w3 3
set $w4 4
set $w5 5
set $w6 6
set $w7 7
set $w8 8
set $w9 9
set $w0 10

workspace 1  output $left
workspace 2  output $left
workspace 3  output $left
workspace 4  output $left
workspace 5  output $left
workspace 6  output $right
workspace 7  output $right
workspace 8  output $right
workspace 9  output $right
workspace 10 output $right

new_window 1pixel
workspace_layout default
workspace_auto_back_and_forth yes
focus_follows_mouse no
floating_modifier $mod
font pango: Inconsolata 10

# Layout
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+x layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+space floating toggle

# Focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right


bindsym $mod+q focus parent
bindsym $mod+a focus child

# Move window
bindsym $mod+$mod2+h move left
bindsym $mod+$mod2+j move down
bindsym $mod+$mod2+k move up
bindsym $mod+$mod2+l move right

# Switch to workspace
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5
bindsym $mod+6 workspace $w6
bindsym $mod+7 workspace $w7
bindsym $mod+8 workspace $w8
bindsym $mod+9 workspace $w9
bindsym $mod+0 workspace $w0

bindsym $mod+Prior workspace prev
bindsym $mod+Next workspace next

# Move focused container to workspace
bindsym $mod+$mod2+1 move container to workspace $w1
bindsym $mod+$mod2+2 move container to workspace $w2
bindsym $mod+$mod2+3 move container to workspace $w3
bindsym $mod+$mod2+4 move container to workspace $w4
bindsym $mod+$mod2+5 move container to workspace $w5
bindsym $mod+$mod2+6 move container to workspace $w6
bindsym $mod+$mod2+7 move container to workspace $w7
bindsym $mod+$mod2+8 move container to workspace $w8
bindsym $mod+$mod2+9 move container to workspace $w9
bindsym $mod+$mod2+0 move container to workspace $w0

bindsym $mod+$mod2+Prior workspace prev
bindsym $mod+$mod2+Next workspace next

# Rename workspace
bindsym $mod+$mod3+1 rename workspace to $w1
bindsym $mod+$mod3+2 rename workspace to $w2
bindsym $mod+$mod3+3 rename workspace to $w3
bindsym $mod+$mod3+4 rename workspace to $w4
bindsym $mod+$mod3+5 rename workspace to $w5
bindsym $mod+$mod3+6 rename workspace to $w6
bindsym $mod+$mod3+7 rename workspace to $w7
bindsym $mod+$mod3+8 rename workspace to $w8
bindsym $mod+$mod3+9 rename workspace to $w9
bindsym $mod+$mod3+0 rename workspace to $w0

bindsym $mod+$mod3+Prior workspace prev
bindsym $mod+$mod3+Next workspace next

bindsym $mod+c move workspace to output right

# Kill
bindsym $mod+w kill
bindsym $mod+F4 kill
bindsym Mod1+F4 kill

# Applications
bindsym $mod+d            exec rofi -show run
bindsym $mod+Return       exec termite
bindsym $mod+BackSpace    exec eg
bindsym $mod+Menu         exec eg
bindsym Mod4+e            exec thunar
bindsym $mod+n            exec firefox -profile .mozilla/firefox/aumgn
bindsym $mod+Shift+n      exec firefox -profile .mozilla/firefox/aumgn --private-window
bindsym $mod+Mod1+n       exec google-chrome-stable
bindsym $mod+Mod1+Shift+n exec google-chrome-stable --incognito

# Audio
bindsym XF86AudioMute        exec ctl speakers toggle
bindsym $mod+F1              exec ctl speakers toggle
bindsym XF86AudioLowerVolume exec ctl speakers down
bindsym $mod+F2              exec ctl speakers down
bindsym XF86AudioRaiseVolume exec ctl speakers up
bindsym $mod+F3              exec ctl speakers up

# Cmus
bindsym $mod+F5       exec ctl music toggle
bindsym XF86AudioPlay exec ctl music toggle
bindsym $mod+F6       exec ctl music stop
bindsym XF86AudioStop exec ctl music stop
bindsym $mod+F7       exec ctl music prev
bindsym XF86AudioPrev exec ctl music prev
bindsym $mod+F8       exec ctl music next
bindsym XF86AudioNext exec ctl music next

bindsym $mod+p                  exec ctl lock
bindsym $mod+$mod2+$mod3+Delete exec ctl reboot
bindsym $mod+$mod2+$mod3+End    exec ctl shutdown

bindsym $mod+$mod2+c            reload
bindsym $mod+$mod2+r            restart
bindsym $mod+$mod2+$mod3+Home   exit

# Resize mode
mode "Resize" {
        bindsym h resize shrink width  10 px or 10 ppt
        bindsym j resize grow   height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow   width  10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "Resize"

# Bars
bar {
      status_command i3status -c /home/aumgn/.config/i3/status_config_left
      tray_output primary
      output $left
      position top

      separator_symbol "   "
      font pango: Ubuntu, FontAwesome 11
      colors {
	    separator  $color8
	    background $color10
	    statusline $color7

	    # <colorclass>       <border>  <backgr.>  <text>
	    focused_workspace    $color13  $color13   $color0
	    active_workspace     $color11  $color11   $color15
	    inactive_workspace   $color10  $color10   $color8
	    urgent_workspace     $color1   $color1    $color15
      }
}

bar {
      status_command i3status -c /home/aumgn/.config/i3/status_config_right
      tray_output primary
      output $right
      position top

      font pango: Ubuntu, FontAwesome 11
      separator_symbol "   "
      colors {
	    separator  $color8
	    background $color10
	    statusline $color7

	    # <colorclass>       <border>  <backgr.>  <text>
	    focused_workspace    $color13  $color13   $color0
	    active_workspace     $color11  $color11   $color15
	    inactive_workspace   $color10  $color10   $color8
	    urgent_workspace     $color1   $color1    $color15
      }
}

# <class>                 <border>   <backgr.>  <text>     <indic.>    <child_border>
client.focused            $color13   $color13   $color0    $color10
client.focused_inactive   $color11   $color11   $color8    $color10
client.unfocused          $color10   $color10   $color8    $color10
client.urgent             $color11   $color1    $color15   $color1

client.background         $color0

exec --no-startup-id ~/.fehbg
