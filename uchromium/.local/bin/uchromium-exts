#! /bin/bash

pip list --format=columns 2>/dev/null | grep requests >/dev/null 2>&1
pip_result=$?

if [[ $pip_result -ne 0 ]]; then
    echo "Missing python library requests"
    exit 1
fi

inoxunpack=~/.local/share/inoxunpack/inoxunpack.py
extdirs=~/.config/chromium/uchromium-exts/

install() {
    echo "### Installing $2"
    $inoxunpack -t $extdirs $1 | head -2
}

install cjpalhdlnbpafiamejdnhcphjbkeiagm ublock-origin
install gcbommkclmclpchllfjekcdonpmejbdp https-everywhere
install hdokiejnpimakedhajhdlcegeplioahd lastpass
install pkehgijcmpdhfbdbbnkijodmdjhbjlgp privacy-badger
install fjnbnpbmkenffdnngjfgmeleoegfcffe stylish
install dbepggeogbaibhgnhhndojpepiihcmeb vimium
install emffkefkbkpkgpdeeooapgaicgmcbolj wikiwand
